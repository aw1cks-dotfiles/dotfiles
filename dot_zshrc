HISTFILE=~/.zsh_history
HISTSIZE=10000
SAVEHIST=10000



source ~/.config/zsh/options.zsh

source ~/.config/zsh/binds.zsh



source ~/.config/zsh/functions.zsh
[ -f "${HOME}/.config/zsh/functions_local.zsh" ] && source ~/.config/zsh/functions_local.zsh

source ~/.config/zsh/startup.zsh

source ~/.config/zsh/aliases.zsh
[ -f "${HOME}/.config/zsh/aliases_local.zsh" ] && source ~/.config/zsh/aliases_local.zsh

source ~/.config/zsh/exports.zsh
[ -f "${HOME}/.config/zsh/exports_local.zsh" ] && source ~/.config/zsh/exports_local.zsh

source ~/.config/zsh/colors.zsh
